<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".formDonasi">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="32dp"
        android:layout_marginRight="@dimen/horizontal_layout"
        android:layout_marginLeft="@dimen/vertical_layout"
        android:layout_marginBottom="@dimen/vertical_layout">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/vertical_layout"
            android:src="@drawable/logo"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:textStyle="italic"
            android:textColor="@color/biru_logo"
            android:text="Form Donasi"
        />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:hint="Nama"
            android:inputType="text"
            android:textStyle="italic"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:hint="Email"
            android:inputType="text"
            android:textStyle="italic"
        />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:hint="Jumlah Donasi"
            android:inputType="text"
            android:textStyle="italic"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:hint="Catatan"
            android:inputType="text"
            android:textStyle="italic"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/biru_logo"
            android:layout_marginTop="80dp"
            android:text="Donasi Sekarang"
            android:textSize="28dp"
            android:textStyle="italic"
            android:textColor="#FFFFFF"
            />


    </LinearLayout>



</ScrollView>